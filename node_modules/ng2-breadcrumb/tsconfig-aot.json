{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitAny": false,
        "declaration": true,
        "rootDir": "./app",
        "outDir": "./bundles"
    },
    "angularCompilerOptions": {
        "genDir": "aot",
        "strictMetadataEmit": true
    },
    "files": [
        "app/app.module.ts",
        "app/components/breadcrumb.ts",
        "app/components/breadcrumbService.ts"
    ],
    "exclude": [
        "node_modules",
        "bundles",
        "demo",
        "test"
    ]
}
